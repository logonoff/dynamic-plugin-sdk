{
  "name": "@monorepo/sample-app",
  "version": "0.0.0-fixed",
  "description": "Sample plugin host application project",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm clean && pnpm webpack",
    "build-prod": "pnpm clean && NODE_ENV=production pnpm webpack",
    "analyze": "pnpm clean && NODE_ENV=production ANALYZE_BUNDLES=true pnpm webpack",
    "lint": "pnpm -w eslint $INIT_CWD",
    "webpack": "NODE_OPTIONS='--require ts-node/register' pnpm exec webpack",
    "http-server": "http-server dist -p 9000 -c-1"
  },
  "devDependencies": {
    "@monorepo/common": "workspace:*",
    "@openshift/dynamic-plugin-sdk": "workspace:*",
    "@openshift/dynamic-plugin-sdk-webpack": "workspace:*",
    "@patternfly/react-core": "^6.4.0",
    "@patternfly/react-icons": "^6.4.0",
    "@patternfly/react-styles": "^6.4.0",
    "@patternfly/react-table": "^6.4.0",
    "@patternfly/react-tokens": "^6.4.0",
    "@types/webpack-bundle-analyzer": "~4.7.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "cypress": "^12.17.3",
    "html-webpack-plugin": "^5.6.5",
    "http-server": "^14.1.1",
    "lodash": "^4.17.23",
    "mini-css-extract-plugin": "^2.9.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "~4.4.4",
    "webpack": "^5.100.0",
    "webpack-bundle-analyzer": "~5.0.1",
    "webpack-cli": "^5.0.1"
  }
}
