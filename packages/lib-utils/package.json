{
  "name": "@openshift/dynamic-plugin-sdk-utils",
  "version": "5.0.0",
  "description": "Provides React focused dynamic plugin SDK utilities",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/openshift/dynamic-plugin-sdk.git",
    "directory": "packages/lib-utils"
  },
  "files": [
    "dist/index.cjs.js",
    "dist/index.esm.js",
    "dist/index.d.ts",
    "dist/index.css",
    "dist/build-metadata.json"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepack": "pnpm build",
    "prepublishOnly": "pnpm test",
    "build": "rm -rf dist && pnpm exec rollup -c && pnpm api-extractor",
    "lint": "pnpm -w eslint $INIT_CWD",
    "test": "pnpm -w jest $INIT_CWD",
    "api-extractor": "pnpm exec api-extractor run -c $INIT_CWD/api-extractor.json",
    "api-extractor-local": "pnpm api-extractor --local"
  },
  "devDependencies": {
    "@monorepo/common": "workspace:*",
    "@openshift/dynamic-plugin-sdk": "workspace:*",
    "@openshift/dynamic-plugin-sdk-extensions": "workspace:*"
  },
  "peerDependencies": {
    "@openshift/dynamic-plugin-sdk": "^4 || ^5 || ^6",
    "@openshift/dynamic-plugin-sdk-extensions": "^1.4.0",
    "react": "^18 || ^19",
    "react-redux": "^7 || ^8",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1"
  },
  "dependencies": {
    "immutable": "^3.8.2",
    "lodash": "^4.17.23",
    "pluralize": "^8.0.0",
    "typesafe-actions": "^4.4.2",
    "uuid": "^8.3.2"
  }
}
