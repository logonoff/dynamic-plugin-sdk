{
  "name": "@openshift/dynamic-plugin-sdk-extensions",
  "version": "1.4.0",
  "description": "Provides extension types for dynamic plugins",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/openshift/dynamic-plugin-sdk.git",
    "directory": "packages/lib-extensions"
  },
  "files": [
    "dist/index.cjs.js",
    "dist/index.esm.js",
    "dist/index.d.ts",
    "dist/build-metadata.json"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepack": "pnpm build",
    "prepublishOnly": "pnpm test",
    "build": "rm -rf dist && pnpm exec rollup -c && pnpm api-extractor",
    "lint": "pnpm -w eslint $INIT_CWD",
    "test": "pnpm -w jest $INIT_CWD",
    "api-extractor": "pnpm exec api-extractor run -c $INIT_CWD/api-extractor.json",
    "api-extractor-local": "pnpm api-extractor --local"
  },
  "devDependencies": {
    "@monorepo/common": "workspace:*",
    "@openshift/dynamic-plugin-sdk": "workspace:*"
  },
  "peerDependencies": {
    "@openshift/dynamic-plugin-sdk": "^4 || ^5 || ^6",
    "react": "^18 || ^19",
    "react-redux": "^7 || ^8",
    "react-router": "^6.3.0",
    "redux": "^4.1.2"
  },
  "peerDependenciesMeta": {
    "react-redux": {
      "optional": true
    },
    "react-router": {
      "optional": true
    },
    "redux": {
      "optional": true
    }
  }
}
