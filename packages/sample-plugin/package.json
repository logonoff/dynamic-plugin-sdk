{
  "name": "@monorepo/sample-plugin",
  "version": "0.0.0-fixed",
  "description": "Sample dynamic plugin project",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm clean && pnpm webpack",
    "build-prod": "pnpm clean && NODE_ENV=production pnpm webpack",
    "lint": "pnpm -w eslint $INIT_CWD",
    "webpack": "NODE_OPTIONS='--require ts-node/register' pnpm exec webpack",
    "http-server": "http-server dist -p 9001 -c-1 --cors"
  },
  "devDependencies": {
    "@monorepo/common": "workspace:*",
    "@monorepo/sample-app": "workspace:*",
    "@openshift/dynamic-plugin-sdk": "workspace:*",
    "@openshift/dynamic-plugin-sdk-webpack": "workspace:*",
    "@patternfly/react-core": "^6.4.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "http-server": "^14.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "~4.4.4",
    "webpack": "^5.100.0",
    "webpack-cli": "^5.0.1"
  }
}
