{
  "name": "@openshift/dynamic-plugin-sdk-webpack",
  "version": "5.0.0",
  "description": "Allows building dynamic plugin assets with webpack",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/openshift/dynamic-plugin-sdk.git",
    "directory": "packages/lib-webpack"
  },
  "files": [
    "dist/index.cjs.js",
    "dist/index.d.ts",
    "dist/build-metadata.json",
    "CHANGELOG.md"
  ],
  "main": "dist/index.cjs.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepack": "pnpm build",
    "prepublishOnly": "pnpm test",
    "build": "rm -rf dist && pnpm exec rollup -c && pnpm api-extractor",
    "lint": "pnpm -w eslint $INIT_CWD",
    "test": "pnpm -w jest $INIT_CWD",
    "api-extractor": "pnpm exec api-extractor run -c $INIT_CWD/api-extractor.json",
    "api-extractor-local": "pnpm api-extractor --local"
  },
  "devDependencies": {
    "@monorepo/common": "workspace:*",
    "@openshift/dynamic-plugin-sdk": "workspace:*"
  },
  "peerDependencies": {
    "webpack": "^5.100.0"
  },
  "dependencies": {
    "lodash": "^4.17.23",
    "semver": "^7.7.3",
    "yup": "^1.7.1"
  },
  "engines": {
    "node": ">=16"
  }
}
