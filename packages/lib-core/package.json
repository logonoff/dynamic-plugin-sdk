{
  "name": "@openshift/dynamic-plugin-sdk",
  "version": "6.0.0",
  "description": "Allows loading, managing and interpreting dynamic plugins",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/openshift/dynamic-plugin-sdk.git",
    "directory": "packages/lib-core"
  },
  "files": [
    "dist/index.cjs.js",
    "dist/index.esm.js",
    "dist/index.d.ts",
    "dist/build-metadata.json",
    "CHANGELOG.md"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepack": "pnpm build",
    "prepublishOnly": "pnpm test",
    "build": "rm -rf dist && pnpm exec rollup -c && pnpm api-extractor",
    "lint": "pnpm -w eslint $INIT_CWD",
    "test": "pnpm -w jest $INIT_CWD",
    "api-extractor": "pnpm exec api-extractor run -c $INIT_CWD/api-extractor.json",
    "api-extractor-local": "pnpm api-extractor --local"
  },
  "devDependencies": {
    "@monorepo/common": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18 || ^19"
  },
  "dependencies": {
    "lodash": "^4.17.23",
    "semver": "^7.7.3",
    "uuid": "^8.3.2",
    "yup": "^1.7.1"
  }
}
